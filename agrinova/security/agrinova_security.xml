<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Categories -->
        <record id="module_category_agrinova" model="ir.module.category">
            <field name="name">AGRINOVA</field>
            <field name="description">Gestion AGRINOVA SARL</field>
            <field name="sequence">15</field>
        </record>

        <!-- Groups -->
        <record id="group_agrinova_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="comment">Accès basique aux fonctionnalités AGRINOVA</field>
        </record>

        <record id="group_agrinova_manager" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_user'))]"/>
            <field name="comment">Gestion et supervision des opérations</field>
        </record>

        <record id="group_agrinova_admin" model="res.groups">
            <field name="name">Administrateur</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Administration complète du système AGRINOVA</field>
        </record>

        <!-- Department Specific Groups -->
        <record id="group_agrinova_sales" model="res.groups">
            <field name="name">Équipe Commerciale</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_user'))]"/>
            <field name="comment">Accès aux ventes et CRM</field>
        </record>

        <record id="group_agrinova_production" model="res.groups">
            <field name="name">Équipe Production</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_user'))]"/>
            <field name="comment">Accès à la production et manufacturing</field>
        </record>

        <record id="group_agrinova_stock" model="res.groups">
            <field name="name">Équipe Logistique</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_user'))]"/>
            <field name="comment">Gestion des stocks et inventaires</field>
        </record>

        <record id="group_agrinova_quality" model="res.groups">
            <field name="name">Équipe Qualité</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_user'))]"/>
            <field name="comment">Contrôle qualité et conformité</field>
        </record>

        <record id="group_agrinova_accounting" model="res.groups">
            <field name="name">Équipe Comptabilité</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_user'))]"/>
            <field name="comment">Accès à la comptabilité et finance</field>
        </record>

        <record id="group_agrinova_hr" model="res.groups">
            <field name="name">Équipe Ressources Humaines</field>
            <field name="category_id" ref="module_category_agrinova"/>
            <field name="implied_ids" eval="[(4, ref('group_agrinova_user'))]"/>
            <field name="comment">Gestion RH et paie</field>
        </record>

        <!-- Record Rules -->
        <record id="agrinova_company_rule" model="ir.rule">
            <field name="name">AGRINOVA: Règle multi-société</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[('id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

    </data>
</odoo>
