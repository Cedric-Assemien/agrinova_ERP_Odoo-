<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_mobile_depot" model="ir.actions.act_window">
        <field name="name">Dépôts</field>
        <field name="res_model">mobile.depot</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau dépôt
            </p>
        </field>
    </record>

    <record id="view_mobile_depot_form" model="ir.ui.view">
        <field name="name">mobile.depot.form</field>
        <field name="model">mobile.depot</field>
        <field name="arch" type="xml">
            <form string="Dépôt Mobile Money">
                <header/>
                <sheet>
                    <group>
                        <field name="reference" readonly="1"/>
                        <field name="client"/>
                        <field name="numero"/>
                        <field name="operateur" readonly="1"/>
                        <field name="compte_wave"/>
                        <field name="montant"/>
                        <field name="date_operation" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mobile_depot_kanban" model="ir.ui.view">
        <field name="name">mobile.depot.kanban</field>
        <field name="model">mobile.depot</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="client"/>
                <field name="numero"/>
                <field name="montant"/>
                <field name="operateur"/>
                <field name="compte_wave"/>
                <field name="date_operation"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_title">
                                        <strong><field name="client"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <i class="fa fa-phone"/> <field name="numero"/>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="badge badge-pill badge-primary">
                                            <field name="montant"/> FCFA
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="badge badge-secondary">
                                                <field name="operateur"/>
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span class="text-muted">
                                                <field name="date_operation"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_mobile_depot_graph" model="ir.ui.view">
        <field name="name">mobile.depot.graph</field>
        <field name="model">mobile.depot</field>
        <field name="arch" type="xml">
            <graph string="Analyses des Dépôts Mobile Money"
                   type="bar"
                   stacked="True"
                   sample="1">
                <field name="date_operation" interval="month" type="row"/>
                <field name="montant" type="measure"/>
                <field name="operateur" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Vue graphique dépôts - évolution linéaire -->
    <record id="view_mobile_depot_graph_line" model="ir.ui.view">
        <field name="name">mobile.depot.graph.line</field>
        <field name="model">mobile.depot</field>
        <field name="arch" type="xml">
            <graph string="Évolution des Dépôts"
                   type="line"
                   sample="1">
                <field name="date_operation" interval="day" type="row"/>
                <field name="montant" type="measure"/>
                <field name="compte_wave" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Vue pivot dépôts corrigée -->
    <record id="view_mobile_depot_pivot" model="ir.ui.view">
        <field name="name">mobile.depot.pivot</field>
        <field name="model">mobile.depot</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des Dépôts par Opérateur"
                   sample="1">
                <field name="date_operation" interval="month" type="row"/>
                <field name="operateur" type="col"/>
                <field name="compte_wave" type="col"/>
                <field name="montant" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_mobile_depot_search" model="ir.ui.view">
        <field name="name">mobile.depot.search</field>
        <field name="model">mobile.depot</field>
        <field name="arch" type="xml">
            <search string="Recherche Dépôts">
                <field name="client"/>
                <field name="numero"/>
                <field name="operateur"/>
                <field name="montant"/>
                <field name="date_operation"/>

                <filter string="Aujourd'hui" name="today"
                        domain="[('date_operation', '&gt;=', context_today()), ('date_operation', '&lt;', (context_today() + datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Cette semaine" name="this_week"
                        domain="[('date_operation', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Ce mois" name="this_month"
                        domain="[('date_operation', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <filter string="Cette année" name="this_year"
                        domain="[('date_operation', '&gt;=', context_today().strftime('%Y-01-01'))]"/>

                <separator/>

                <filter string="Avec Wave" name="with_wave"
                        domain="[('compte_wave', '=', True)]"/>
                <filter string="Sans Wave" name="without_wave"
                        domain="[('compte_wave', '=', False)]"/>

                <group expand="1" string="Grouper par">
                    <filter string="Client" name="group_client" context="{'group_by':'client'}"/>
                    <filter string="Opérateur" name="group_operateur" context="{'group_by':'operateur'}"/>
                    <filter string="Compte Wave" name="group_wave" context="{'group_by':'compte_wave'}"/>
                    <filter string="Jour" name="group_day" context="{'group_by':'date_operation:day'}"/>
                    <filter string="Mois" name="group_month" context="{'group_by':'date_operation:month'}"/>
                    <filter string="Année" name="group_year" context="{'group_by':'date_operation:year'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_mobile_money_dashboard_combined" model="ir.actions.act_window">
        <field name="name">Tableau de Bord Mobile Money</field>
        <field name="res_model">mobile.depot</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{
            'search_default_this_month': 1,
            'group_by_no_leaf': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tableau de bord Mobile Money
            </p>
            <p>
                Analysez vos opérations Mobile Money :
                <ul>
                    <li><strong>Dépôts :</strong> Entrées d'argent par opérateur</li>
                    <li><strong>Retraits :</strong> Sorties d'argent et tendances</li>
                    <li><strong>Transferts :</strong> Flux internationaux</li>
                </ul>
            </p>
        </field>
    </record>

    <record id="action_mobile_depot_analysis" model="ir.actions.act_window">
        <field name="name">Analyse des Dépôts</field>
        <field name="res_model">mobile.depot</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'graph', 'view_id': ref('view_mobile_depot_graph')}),
                                      (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_mobile_depot_pivot')})]"/>
        <field name="context">{'search_default_this_month': 1}</field>
    </record>

</odoo>