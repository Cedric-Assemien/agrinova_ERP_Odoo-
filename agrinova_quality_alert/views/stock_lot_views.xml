<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_lot_form_quality" model="ir.ui.view">
        <field name="name">stock.lot.form.quality</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expiration_date']" position="after">
                <field name="days_to_expiry" readonly="1"/>
                <field name="alert_status" widget="badge" decoration-success="alert_status=='ok'" decoration-warning="alert_status=='warning'" decoration-danger="alert_status in ('expiring','expired')"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_stock_lot_tree_quality" model="ir.ui.view">
        <field name="name">stock.lot.tree.quality</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expiration_date']" position="after">
                <field name="days_to_expiry"/>
                <field name="alert_status" widget="badge"/>
            </xpath>
        </field>
    </record>
    <record id="action_stock_lot_expiry_alert" model="ir.actions.act_window">
        <field name="name">Alertes péremption</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('alert_status', 'in', ['warning', 'expiring', 'expired'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune alerte de péremption trouvée
            </p>
        </field>
    </record>

    <menuitem
        id="menu_stock_lot_expiry_alert"
        name="Alertes péremption"
        parent="quality_control.menu_quality_control"
        action="action_stock_lot_expiry_alert"
        sequence="20"/>
</odoo>
