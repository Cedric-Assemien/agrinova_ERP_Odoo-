<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron quotidien mise à jour BCEAO -->
    <record id="ir_cron_update_bceao_rates" model="ir.cron">
        <field name="name">Mise à jour Taux BCEAO</field>
        <field name="model_id" ref="model_bceao_rate_provider"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_bceao_rates()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>


        <field name="active" eval="True"/>
        <field name="priority">5</field>
        <!-- Exécution à 02:00 UTC tous les jours -->
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=2, minute=0, second=0)"/>
    </record>
</odoo>
