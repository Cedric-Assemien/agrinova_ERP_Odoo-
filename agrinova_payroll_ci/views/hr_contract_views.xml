<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire contrat -->
    <record id="view_hr_contract_form_ci" model="ir.ui.view">
        <field name="name">hr.contract.form.ci</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='wage']" position="after">
                <field name="cnps_number"/>  
                <field name="transport_allowance"/>
                <field name="housing_allowance"/>
                <field name="family_allowance"/>
                <field name="cnps_base" readonly="1"/>
                <field name="its_exempt"/>
            </xpath>
        </field>
    </record>
</odoo>
