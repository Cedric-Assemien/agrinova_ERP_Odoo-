<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire contrat -->
    <record id="view_hr_contract_form_ci" model="ir.ui.view">
        <field name="name">hr.contract.form.ci</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <!-- Cibler la page "Informations sur le salaire" et ajouter un groupe -->
            <xpath expr="//page[@name='information']" position="inside">
                <group string="Spécificités Côte d'Ivoire">
                    <group>
                        <field name="cnps_number"/>
                        <field name="cnps_category"/>
                        <field name="tax_parts"/>
                        <field name="its_exempt"/>
                    </group>
                    <group>
                        <field name="transport_allowance"/>
                        <field name="housing_allowance"/>
                        <field name="family_allowance"/>
                        <field name="cnps_base"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

