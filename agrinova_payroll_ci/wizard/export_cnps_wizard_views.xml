<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard CNPS -->
    <record id="view_export_cnps_wizard_form" model="ir.ui.view">
        <field name="name">export.cnps.wizard.form</field>
        <field name="model">export.cnps.wizard</field>
        <field name="arch" type="xml">
            <form string="Export CNPS">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="payslip_ids" widget="many2many_tags" invisible="1"/>
                    <field name="export_file" filename="export_filename" readonly="1" invisible="not export_file"/>
                    <field name="export_filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_export_cnps" string="Générer Export" type="object" class="btn-primary" invisible="export_file"/>
                    <button string="Fermer" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard ITS -->
    <record id="view_export_its_wizard_form" model="ir.ui.view">
        <field name="name">export.its.wizard.form</field>
        <field name="model">export.its.wizard</field>
        <field name="arch" type="xml">
            <form string="Export ITS">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="payslip_ids" widget="many2many_tags" invisible="1"/>
                    <field name="export_file" filename="export_filename" readonly="1" invisible="not export_file"/>
                    <field name="export_filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_export_its" string="Générer Export" type="object" class="btn-primary" invisible="export_file"/>
                    <button string="Fermer" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
