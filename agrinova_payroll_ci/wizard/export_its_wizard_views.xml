<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_export_its_wizard_form_file" model="ir.ui.view">
        <field name="name">export.its.wizard.form</field>
        <field name="model">export.its.wizard</field>
        <field name="arch" type="xml">
            <form string=" Export ITS">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="payslip_ids" widget="many2many_tags" invisible="1"/>
                    <field name="export_file" filename="export_filename" readonly="1" invisible="not export_file"/>
                    <field name="export_filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_export_its" string="Générer" type="object" class="btn-primary" invisible="export_file"/>
                    <button string="Fermer" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
